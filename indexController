const User = require("./api/UserModel");
module.exports.registerUser = async (req, res) => {
  let { full_name, father_name, email, password, roll, phone_no, class_name } =
    req.body;

  if (
    !full_name ||
    !father_name ||
    !email ||
    !password ||
    !roll ||
    !phone_no ||
    !class_name
  ) {
    res.status(422).json({ error: "You Should write all fields properly..!" });
  }
  try {
    const usertExist = await User.findOne({ email: email }).exec();
    if (usertExist) {
      return res.status(422).json({ error: "User already exists" });
    }
    const user = new User({
      full_name,
      father_name,
      email,
      password,
      roll,
      phone_no,
      class_name,
    });

    const userSave = await user.save();
    if (userSave) {
      return res.status(200).json({ message: "User saved successfully" });
    } else {
      return res.status(500).json({ message: "User can not registered" });
    }
  } catch (err) {
    console.log(err);
  }
};

module.exports.loginUser = async (req, res) => {
  let { email, password } = req.body;
  if (!email || !password) {
    return res.status(422).json({ error: "Please fill all fields properly" });
  }
  try {
    const usertExist = await User.findOne({ email: email });
    if (!usertExist) {
      return res.status(402).json({ error: "User does not exist" });
    } else {
      return res.status(200).json({ message: "User Login successfully" });
    }
  } catch (err) {
    console.log(err);
  }
};
